<div class="container mt-5">
    <h1>New dose</h1>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :cocktail, label: "Cocktail" %>
        <%= f.association :ingredient, label: "Ingredient" %>
        <%= f.input :description, label: "Description" %>
        <%= f.submit %>
    <% end %>

</div>