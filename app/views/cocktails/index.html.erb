<div class="container mt-5">
    <h1>Chapters</h1>

    <ul id="cocktails-list">
    <% @cocktails.each do |cocktail| %>
        <li>
            <%= link_to  cocktail.name, cocktail_path(cocktail) %>
        </li>
    <% end %>
    </ul>

    <%= link_to new_cocktail_path, method: "get", id: "new-cocktail-btn", class: "plus-btn" do %>
        <i class="mt-3 lni lni-circle-plus"></i>
    <% end %>

</div>

